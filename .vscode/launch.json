    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ESP32 with external OpenOCD",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "external",
            "executable": "${workspaceRoot}/build_gcc_esp32/template-project.elf",
            "cwd": "${workspaceRoot}",
            "gdbPath": "xtensa-esp32-elf-gdb",
            "objdumpPath": "xtensa-esp32-elf-gdb",
            "gdbTarget": "host.docker.internal:3333",
            "device": "ESP32",
            "breakAfterReset": true,
            "runToEntryPoint": "app_main",
            "preAttachCommands": [
                "monitor reset halt",
                "monitor program_esp ${env:HOST_WORKSPACE_PATH}/build_gcc_esp32/bootloader/bootloader.bin 0x1000 verify",
                "monitor program_esp ${env:HOST_WORKSPACE_PATH}/build_gcc_esp32/partition_table/partition-table.bin 0x8000 verify",
                "monitor program_esp ${env:HOST_WORKSPACE_PATH}/build_gcc_esp32/template-project.bin 0x10000 verify",
                "monitor reset run",
            ],
            "postAttachCommands": [
                "monitor reset run",
            ],
            "showDevDebugOutput": "vscode",
            "preLaunchTask": "",
        },
        {
            "name": "Run ESP32 with external OpenOCD",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "external",
            "executable": "${workspaceRoot}/build_gcc_esp32/template-project.elf",
            "cwd": "${workspaceRoot}",
            "gdbPath": "xtensa-esp32-elf-gdb",
            "objdumpPath": "xtensa-esp32-elf-gdb",
            "gdbTarget": "host.docker.internal:3333",
            "device": "ESP32",
            "breakAfterReset": false,
            "preAttachCommands": [
                "monitor reset halt",
                "monitor program_esp ${env:HOST_WORKSPACE_PATH}/build_gcc_esp32/bootloader/bootloader.bin 0x1000 verify",
                "monitor program_esp ${env:HOST_WORKSPACE_PATH}/build_gcc_esp32/partition_table/partition-table.bin 0x8000 verify",
                "monitor program_esp ${env:HOST_WORKSPACE_PATH}/build_gcc_esp32/template-project.bin 0x10000 verify",
                "monitor reset run exit",
            ],
            "showDevDebugOutput": "vscode",
            "preLaunchTask": "",
        }
    ]
}
